<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <io.armcha.elasticview.ElasticView
        android:id="@+id/row_layout_movie_card_full"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:backgroundTint="@color/background_main"
        app:cardCornerRadius="10dp"
        app:cardElevation="9dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/row_image_movie_card_latest"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/row_progress_movie_card_latest"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:indeterminate="true"
            android:indeterminateTint="#FDCC00"
            android:layout_centerInParent="true"/>

        <FrameLayout
            android:alpha="0.8"
            android:background="@drawable/row_movie_card_latest_fade"
            android:layout_width="120dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/row_title_movie_card_latest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/ttnorms_medium"
                android:textSize="25sp"
                android:text="How to train your dragon: the Hidden World"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_rate"/>

                <TextView
                    android:id="@+id/row_rate_movie_card_latest"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ttnorms_medium"
                    android:textSize="17sp"
                    android:text="7.9"/>

            </LinearLayout>

        </LinearLayout>

        </RelativeLayout>

    </io.armcha.elasticview.ElasticView>




</RelativeLayout>
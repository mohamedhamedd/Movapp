<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <io.armcha.elasticview.ElasticView
        android:id="@+id/row_layout_movie_card"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:backgroundTint="@color/background_main"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardElevation="6dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/row_image_movie_card"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"/>

            <ProgressBar
                android:id="@+id/row_progress_movie_card"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:indeterminate="true"
                android:indeterminateTint="#FDCC00"
                android:layout_centerInParent="true"/>

        </RelativeLayout>



    </io.armcha.elasticview.ElasticView>

    <TextView
        android:id="@+id/row_title_movie_card"
        android:text="Captin Marvel"
        android:fontFamily="@font/ttnorms_medium"
        android:textSize="17sp"
        android:textColor="@color/font_color"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_rate"/>

        <TextView
            android:id="@+id/row_rate_movie_card"
            android:text="9.7"
            android:layout_gravity="center"
            android:fontFamily="@font/ttnorms_medium"
            android:textSize="15sp"
            android:textColor="@color/font_color"
            android:layout_marginStart="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_main"
    android:layout_margin="5dp">

    <io.armcha.elasticview.ElasticView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/background_main"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/row_cast_image"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <ProgressBar
                android:id="@+id/row_cast_progress"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:indeterminateTint="#FDCC00" />

        </RelativeLayout>
    </io.armcha.elasticview.ElasticView>

    <TextView
        android:id="@+id/row_cast_name"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Will smith"
        android:textColor="@color/font_color"
        android:fontFamily="@font/ttnorms_medium"/>

</LinearLayout>